<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Demo NodeJS</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <style>
    .card {
      border-radius: 10px;
    }
  </style>
</head>

<body>


  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/Adminproduct">Admin Product</a>



    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item ml-auto" style="margin-right: 100px;">
        <a class="nav-link active" href="/create">Create Products</a>
      </li>
    </ul>



  </div>

  <div class="row">
    <% for(let i=0; i < dataProduct.length; i++) { %>
      <div class="col-sm-3">
        <div class="card rounded bg-secondary" style="width: 18rem;">
          <img class="card-img-top fixed-image img-fluid" src="/image/<%= dataProduct[i].image %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">
              <%= dataProduct[i].name %>
            </h5>
            <p class="card-text">
              <%= dataProduct[i].infomation %>
            </p>

            <a href="/detail/product/<%= dataProduct[i].id %>" class="btn btn-primary ">
              <div class="price-container">
                <span class="price">
                  <%= dataProduct[i].price %>
                </span>
              </div>
            </a>
          </div>
        </div>

      </div>
      <% } %>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>