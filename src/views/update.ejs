<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update user</title>
    <link rel="stylesheet" href="/css/user.css">
</head>

<body>
    <div class="update-user-container">
        <form action="/update-user" method="POST" enctype="multipart/form-data">
            <div>
                <label>First name:</label>
                <input name="firstName" value="<%= dataUser.firstName %>" />
            </div>
            <div>
                <label>Last name:</label>
                <input name="lastName" value="<%= dataUser.lastName %>" />
            </div>
            <div>
                <label>Email:</label>
                <input name="email" value="<%= dataUser.email %>" />
            </div>
            <div>
                <label>Address:</label>
                <input name="address" value="<%= dataUser.address %>" />
            </div>
            <div>
                <label>IMG</label>
                <input type="file" name="img" accept="image/*" />
            </div>
            <input type="hidden" value="<%= dataUser.id %>" name="id" />
            <div>
                <button class="btn-save" type="submit">Save</button>
            </div>
        </form>
    </div>
</body>

</html>